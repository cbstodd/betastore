
<div class="well">
  <h1><%= @product.name %></h1>
  <p><h2><%= number_to_currency @product.price %></h2></p>
<p><%= image_tag @product.image_url, alt: @product.image_url, 
                  class: "img-rounded", style: "max-width: 450px" %></p>
<p><%= @product.description %></p>

<%= link_to "Edit Product", edit_admin_product_path, 
              class: "btn btn-primary btn-sm", role: "button" %> 
<%= link_to "Delete product", 
              admin_product_path(@product), method: :delete, data: 
              { confirm: "Are you sure you want to delete?"}, 
              class: "btn btn-primary btn-sm", role: "button"  %> 
<%= link_to "Back to product list", admin_products_path, 
              class: "btn btn-primary btn-sm", role: "button" %> 

</div>