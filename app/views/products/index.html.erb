<h1>Products</h1>

<div class="row">
  <% for product in @products %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= image_tag product.image_url, class: "image-responsive" %>
        <div class="caption">
          <h3><%= link_to product.name, product_path(product) %></h3>
          <h3><%= link_to product.id, product_path(product) %></h3>
          <h3><%= product.price %>
          <p><h5><%= product.description %></h5></p>
          <p><a href="#" class="btn btn-primary" role="button">Button</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
