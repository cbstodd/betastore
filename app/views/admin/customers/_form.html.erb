<% if @customer.errors.present? %>
<p>
  <h2>There was an error</h2>
  <% for error in @customer.errors.full_messages %>
    <%= error %>
  <% end %>
</p>
<% end %>

<p><%= link_to "View all customers", admin_customers_path %></p>

<%= form_for [:admin, @customer], html: { class: "form-horizontal", role: "form"}  do |f| %>
  
  <div class="form-group">
    <div class="col-sm-6">
      <%= f.label :name %>
      <%= f.text_field :name, class:"form-control", placeholder: "" %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-6">
      <%= f.label :email %>
      <%= f.text_field :email, class:"form-control", placeholder: ""  %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-6">
      <%= f.label :zip_code %>
      <%= f.text_field :zip_code, class:"form-control", placeholder: ""  %>
    </div>
  </div>  
    
  <div class="form-group">
    <div class="col-sm-6">
      <%= f.label :state %>
      <%= f.text_field :state, class:"form-control", placeholder: ""  %>
    </div>
  </div>

  <%= f.submit class: "btn btn-primary" %>

<% end %>