
<div class="well">
  <h1><%= @product.name %></h1>
  <p><h2><%= number_to_currency @product.price %></h2></p>
<p><%= image_tag @product.image_url, alt: @product.image_url, 
                  class: "img-rounded", style: "max-width: 450px" %></p>
<p><%= @product.description %></p>
<p><%= link_to "Add to Cart", add_to_cart_path(@product.id), class: "btn btn-default", method: "post" %></p>


</div>

<%= link_to "Back", root_path, class: "btn btn-default" %>
