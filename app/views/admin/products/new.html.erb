<% if @product.errors.present? %>
<p>
  <h2>There was an error</h2>
  <% for error in @product.errors.full_messages %>
    <%= error %>
  <% end %>
</p>
<% end %>

<center><p><%= link_to "View all Products", admin_products_path %></p></center>


<%= form_for [:admin, @product] do |f| %>
  
  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <%= f.label :price %>
  <%= f.text_field :price %>
  
  <%= f.label :image_url %>
  <%= f.text_field :image_url %>

  <%= f.submit %>
<% end %>
