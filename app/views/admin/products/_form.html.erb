<% if @product.errors.present? %>
<p>
  <h2>There was an error</h2>
  <% for error in @product.errors.full_messages %>
    <%= error %>
  <% end %>
</p>
<% end %>
  
  <p><%= link_to "View all Products", admin_products_path %></p>

<%= form_for [:admin, @product], html: { class: "form-horizontal", role: "form"}  do |f| %>
  
  <div class="form-group">
    <div class="col-sm-6">
      <%= f.label :name %>
      <%= f.text_field :name, class:"form-control", id: "inputEmail3", placeholder: "" %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-6">
      <%= f.label :price %>
      <%= f.text_field :price, class:"form-control", id: "inputEmail3", placeholder: ""  %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-6">
      <%= f.label :image_url %>
      <%= f.text_field :image_url, class:"form-control", id: "inputEmail3", placeholder: ""  %>
    </div>
  </div>

  <%= f.submit class: "btn btn-primary" %>

<% end %>